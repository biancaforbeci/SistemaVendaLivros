@model IEnumerable<SistemaVendaLivros.Models.Carrinho>

@{
    ViewBag.Title = "ListCompras";
}

<h2 style="text-align:center; color:purple">Lista de Livros Comprados</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._Livro.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Livro.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Cliente.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._Livro.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Livro.Preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Cliente.Nome)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.CarrinhoID })             
        </td>
    </tr>
}

</table>
