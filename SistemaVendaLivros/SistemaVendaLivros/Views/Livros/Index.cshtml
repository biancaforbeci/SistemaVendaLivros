@model IEnumerable<SistemaLivros.Models.Livro>

@{
    ViewBag.Title = "Index";

}

<h2 style="text-align:center; color:purple">Livros Disponíveis</h2>

<p>
    @Html.ActionLink("Create New", "Create","Livros")
</p>
<table class="table">
    <tr>
        <th>
            <p><h5>@Html.DisplayNameFor(model => model.Foto)</h5></p>
        </th>
        <th>
            <h5>@Html.DisplayNameFor(model => model.Nome)</h5>
        </th>
        <th>
            <h5> @Html.DisplayNameFor(model => model.Editora)</h5>
        </th>
        <th>
            <h5> @Html.DisplayNameFor(model => model.Qtd)</h5>
        </th>
        <th>
            <h5> @Html.DisplayNameFor(model => model.Preco)</h5>
        </th>
        <th>
            <p><h5 style="color:blueviolet"><b>@Html.Label("COMPRE ABAIXO")</b></h5></p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/fonts/@item.Foto" width="150" height="150" />
            </td>
            <td>
                <h5> @Html.DisplayFor(modelItem => item.Nome)</h5>
            </td>
            <td>
                <h5>  @Html.DisplayFor(modelItem => item.Editora)</h5>
            </td>
            <td>
                <h5>  @Html.DisplayFor(modelItem => item.Qtd)</h5>
            </td>
            <td style="color:red">
                <h5>R$ @Html.DisplayFor(modelItem => item.Preco)</h5>
            </td>
            <td>
                <input type="button" class="btn btn-info" value="COMPRE" onclick="location.href='@Url.Action("View", "Carrinho", new { id = item.LivroID })'" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LivroID }) |
                @Html.ActionLink("Details", "Details", new { id = item.LivroID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LivroID })
            </td>
        </tr>
    }

</table>
